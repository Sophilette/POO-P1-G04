<?xml version="1.0" encoding="utf-8"?>
<!--
  Formulario para "Nuevo Cliente":
  - Inputs para ID, Nombre, Teléfono, Dirección y un Spinner para Tipo (PERSONAL/EMPRESARIAL).
  - Botones Guardar/Cancelar
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aggcliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f6fc"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del formulario -->


            <TextView
                android:id="@+id/headCliente"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="Nuevo Cliente"
                android:textColor="#FF0D1D3D"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etIdCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. C005"
                android:textColor="@color/black" />

            <!-- Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nombre"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNombreCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. Ana Torres"
                android:textColor="@color/black" />

            <!-- Teléfono -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Teléfono"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTelefonoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. 0991234567"
                android:inputType="phone"
                android:textColor="@color/black" />

            <!-- Dirección -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Dirección"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDireccionCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. Av. 9 de Octubre"
                android:textColor="@color/black" />

            <!-- Tipo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tipo de Cliente"
                android:textColor="#333333"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spTipoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Acciones -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:gravity="end"
                android:orientation="horizontal">

                <!-- Guardar: en este avance solo cierra el formulario -->
                <Button
                    android:id="@+id/guardarbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF0D1D3D"
                    android:onClick="guardarCliente"
                    android:text="Guardar"
                    android:textColor="#FFFFFF" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/cancelarbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#9E0000"
                    android:onClick="cancelar"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>

