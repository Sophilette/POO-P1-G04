<?xml version="1.0" encoding="utf-8"?>
<!-- Card para Técnico -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="#f4f6fc"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ID -->
        <TextView
            android:id="@+id/tvTecId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T001"
            android:textColor="#FF0D1D3D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvTecNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mario Barcos"
            android:textColor="#000000" />

        <!-- Teléfono -->
        <TextView
            android:id="@+id/tvTecTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="0999001122"
            android:textColor="#000000" />

        <!-- Especialidad -->
        <TextView
            android:id="@+id/tvTecEspecialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Frenos"
            android:textColor="#000000" />

        <!-- Botón eliminar -->
        <Button
            android:id="@+id/btnEliminarTec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#9E0000"
            android:text="Eliminar"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
