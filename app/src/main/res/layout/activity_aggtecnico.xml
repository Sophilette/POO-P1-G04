<?xml version="1.0" encoding="utf-8"?>
<!-- Formulario de Técnico (centrado y ancho fijo, incluye 'especialidad') -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aggtecnico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f6fc"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/formContainerTecnico"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headTecnico"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="Nuevo Técnico"
                android:textColor="#FF0D1D3D"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- ID -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="#333333"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etIdTecnico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. T003"
                android:textColor="@color/black" />

            <!-- Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nombre"
                android:textColor="#333333"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etNombreTecnico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. Andrea Paredes"
                android:textColor="@color/black" />

            <!-- Teléfono -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Teléfono"
                android:textColor="#333333"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etTelefonoTecnico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. 0991234567"
                android:inputType="phone"
                android:textColor="@color/black" />

            <!-- Especialidad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Especialidad"
                android:textColor="#333333"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etEspecialidadTecnico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. Suspensión / Frenos / Motor"
                android:textColor="@color/black" />

            <!-- Acciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelarTecnicoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#9E0000"
                    android:onClick="cancelar"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/guardarTecnicoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF0D1D3D"
                    android:onClick="guardarTecnico"
                    android:text="Guardar"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
