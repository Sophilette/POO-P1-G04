<?xml version="1.0" encoding="utf-8"?>
<!-- Formulario de Técnico (centrado y ancho fijo, incluye 'especialidad') -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aggtecnico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f6fc"
    android:padding="16dp">

    <TextView
        android:id="@+id/head3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="83dp"
        android:fontFamily="sans-serif"
        android:text="AutoManager"
        android:textColor="#FF0D1D3D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/headTecnico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Nuevo Técnico"
                android:textColor="#FF0D1D3D"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- ID -->
            <TextView
                android:id="@+id/tvCodigoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:text="Identificación"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/headTecnico"/>

            <EditText
                android:id="@+id/etIdTecnico"
                android:layout_width="347dp"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. T003"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCodigoLabel"/>

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:text="Nombre"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etIdTecnico"/>

            <EditText
                android:id="@+id/etNombreTecnico"
                android:layout_width="347dp"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. Andrea Paredes"
                android:textColor="@color/black"
                android:padding="16dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreLabel"/>

            <!-- Teléfono -->
            <TextView
                android:id="@+id/tvTelefonoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:text="Teléfono"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etNombreTecnico"/>

            <EditText
                android:id="@+id/etTelefonoTecnico"
                android:layout_width="347dp"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. 0991234567"
                android:inputType="phone"
                android:textColor="@color/black"
                android:padding="16dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTelefonoLabel"/>

            <!-- Especialidad -->
            <TextView
                android:id="@+id/tvEspecialidadLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:text="Especialidad"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etTelefonoTecnico"/>

            <EditText
                android:id="@+id/etEspecialidadTecnico"
                android:layout_width="347dp"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej. Suspensión / Frenos / Motor"
                android:textColor="@color/black"
                android:padding="16dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEspecialidadLabel"/>

            <!-- Acciones -->

                <Button
                    android:id="@+id/cancelarTecnicoBtn"
                    android:layout_width="121dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="36dp"
                    android:backgroundTint="#9E0000"
                    android:onClick="cancelar"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.062"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etEspecialidadTecnico"/>

                <Button
                    android:id="@+id/guardarTecnicoBtn"
                    android:layout_width="121dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="36dp"
                    android:backgroundTint="#FF0D1D3D"
                    android:onClick="guardarTecnico"
                    android:text="Guardar"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.937"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etEspecialidadTecnico"/>

</androidx.constraintlayout.widget.ConstraintLayout>
