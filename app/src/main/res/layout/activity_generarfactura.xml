<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f6fc">

    <!-- Encabezado y botón de retroceso -->
    <TextView
        android:id="@+id/headGenerarFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="AutoManager"
        android:textColor="#FF0D1D3D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/btnRetrocederGenerarFactura"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:contentDescription="Retroceder"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/headGenerarFactura"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/retrocederiocon" />

    <!-- ScrollView para todo el contenido -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headGenerarFactura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generar Factura"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FF0D1D3D"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- SECCIÓN DE SELECCIÓN -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Empresa"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spinnerEmpresa"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Año"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/etAno"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                android:background="@android:drawable/editbox_background"
                android:hint="Ej: 2025"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mes"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
            <Spinner
                android:id="@+id/spinnerMes"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

            <!-- BOTÓN ÚNICO "GENERAR" -->
            <Button
                android:id="@+id/btnGenerar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generar"
                android:backgroundTint="#FF0D1D3D"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"/>

            <!-- SECCIÓN DE DETALLE, OCULTA INICIALMENTE -->
            <LinearLayout
                android:id="@+id/layoutDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="24dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalle de Servicios"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FF0D1D3D"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:id="@+id/tvDetalleServicios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tvTotalPagar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>
                <!-- Nota: No hay un segundo botón aquí -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>